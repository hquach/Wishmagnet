<div class="post">
    <div class="post-headline">
        <div class="author_img"> %post_author_avatar% </div>
        <h1>
            <a title="Permanent Link to %post_title%" rel="bookmark" href="%post_permalink%" id="%post_id%" >%post_title%</a>
        </h1>
        <p class="date">%post_author% : %post_date% %post_time% : %post_categories%</p>
    </div>

    <div class="post-bodycopy clearfix">%post_content%</div>
    <div class="post-comments">%post_comments%</div>	
</div>
